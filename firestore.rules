rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // 1. Collezione USERS: Solo l'utente loggato può leggere il proprio ruolo
    match /users/{userId} {
      allow read: if request.auth.uid == userId; 
      allow write: if isAdmin();
    }

    // 2. Collezione WORK_AREAS: Tutti i loggati leggono, gli admin scrivono
    match /work_areas/{workAreaId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // 3. Collezione EMPLOYEES: L'utente può leggere il proprio profilo
    match /employees/{employeeId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if isAdmin();
    }

    // 4. Collezione TIME_ENTRIES: Timbrature (REGOLA DEFINITIVA)
    match /time_entries/{timeEntryId} {
        // PERMETTI la lettura e scrittura solo se il campo 'userId' nel documento corrisponde all'UID loggato
        // Questa regola è performante e permette le query di raccolta.
        allow read, write: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
    }
  }
}